    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'wgsl-playground'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=wgsl-playground",
                    "--package=wgsl-playground"
                ],
                "filter": {
                    "name": "wgsl-playground",
                    "kind": "bin"
                }
            },
            "args": [
                ".\\shaders\\fragment.wgsl",
                ".\\shaders\\vertex.wgsl"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'wgsl-playground'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=wgsl-playground",
                    "--package=wgsl-playground"
                ],
                "filter": {
                    "name": "wgsl-playground",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}
